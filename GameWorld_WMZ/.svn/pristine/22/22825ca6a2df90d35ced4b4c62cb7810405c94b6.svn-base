void GameBuider::SetWorldView(WorldView *view)
{
    this->_targetWorldView = view;
}

QPoint GameBuider::randomWorldPosition()
{
    int x = rand() % _targetWorldView->_world->getCols();
    int y = rand() % _targetWorldView->_world->getRows();
    return QPoint(x, y);
}
